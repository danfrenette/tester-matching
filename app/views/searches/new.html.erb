<div class="mt-5"></div>

<%= simple_form_for @search do |f| %>
  <div class="form-group">
    <%= f.input :countries, collection: @countries,
      input_html: { class: "multi-select form-control", multiple: true } %>
  </div>

  <div class="form-group">
    <%= f.input :device_ids, collection: @devices,
      label_method: :description, value_method: :id,
      input_html: { class: "multi-select form-control", multiple: true } %>
  </div>

  <%= f.submit "Search!", class: "btn btn-primary" %>
<% end %>

<% if @search_results.present? %>
  <table class="mt-3 table">
    <thead>
      <tr>
        <th scope="col">Tester</th>
        <th scope="col">Bugs Count</th>
      </tr>
      <tbody>
        <%- @testers.each do |tester| %>
          <tr>
            <td><%= tester.name %></td>
            <td><%= @search_results[tester.id] %></td>
          </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
<% end %>
